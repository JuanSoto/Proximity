{
  "name": "proximity",
  "version": "1.0.0",
  "description": "Code challenge used for hiring process",
  "main": "index.js",
  "scripts": {
    "start": "cd build && node main",
    "compile": "yarn build && backpack build",
    "dev": "npm run build && RUNNING=DEV backpack dev --inspect",
    "build": "npm run swaggerDoc && node build.js",
    "lint": "tslint --project tsconfig.json \"src/**/*.ts\" ",
    "test": "TEST=1 nyc mocha --exit -r ts-node/register test/**/*.test.ts",
    "swaggerDoc": "./node_modules/.bin/swagger-jsdoc -d swaggerDef.js -o ./src/common/swagger.json"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "dependencies": {
    "@types/express": "^4.0.35",
    "airbrake-js": "1.4.9",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "graylog-ts": "^0.2.0",
    "lodash": "^4.17.19",
    "moment": "^2.26.0",
    "mongodb-memory-server": "^6.6.1",
    "mongoose": "^5.9.18",
    "morgan": "^1.9.1",
    "pino": "5.9.0",
    "source-map-support": "^0.4.15",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^2.0.14"
  },
  "devDependencies": {
    "@types/bunyan": "0.0.36",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.47",
    "@types/supertest": "^2.0.4",
    "awesome-typescript-loader": "^5.2.1",
    "backpack-core": "^0.8.3",
    "chai": "^4.1.2",
    "mocha": "^5.0.0",
    "nyc": "^14.0.0",
    "pino-pretty": "^2.5.0",
    "prettier": "1.16.4",
    "shelljs": "^0.7.8",
    "supertest": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "3.1.1"
  },
  "author": "Juan Manuel Soto Rojas"
}
